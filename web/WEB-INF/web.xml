<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- Servlet for ControladorUsuario -->
    <servlet>
        <servlet-name>ControladorUsuario</servlet-name>
        <servlet-class>controlador.ControladorUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorUsuario</servlet-name>
        <url-pattern>/controladorUsuario</url-pattern>
    </servlet-mapping>

    <!-- Servlet for ControladorDocumento -->
    <servlet>
        <servlet-name>ControladorDocumento</servlet-name>
        <servlet-class>controlador.ControladorDocumento</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorDocumento</servlet-name>
        <url-pattern>/SubirDocumento</url-pattern>
    </servlet-mapping>

    <!-- Servlet for ControladorCategoria -->
    <servlet>
        <servlet-name>ControladorCategoria</servlet-name>
        <servlet-class>controlador.ControladorCategoria</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorCategoria</servlet-name>
        <url-pattern>/GestionarCategoria</url-pattern>
    </servlet-mapping>

    <!-- Servlet for CtrolValidar -->
    <servlet>
        <servlet-name>CtrolValidar</servlet-name>
        <servlet-class>controlador.CtrolValidar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CtrolValidar</servlet-name>
        <url-pattern>/ctrolValidar</url-pattern>
    </servlet-mapping>

    <!-- Servlet for CerrarSesion -->
    <servlet>
        <servlet-name>CerrarSesion</servlet-name>
        <servlet-class>controlador.CerrarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CerrarSesion</servlet-name>
        <url-pattern>/CerrarSesion</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
